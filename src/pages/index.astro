---
import BlochSphere from '../components/BlochSphere.jsx';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Astro" hideNav={true} fullWidth={true}>
	<div class="container">
		<h1>Daniel Mandragona</h1>
		<p>Software Engineer</p>
		<div class="button-container">
			<a href="/blog" class="button"><span class="gradient-text">Blog</span></a>
			<a href="/links" class="button"><span class="gradient-text">Links</span></a>
		</div>
	</div>
	<BlochSphere client:load />
</Layout>

<style>
	.container {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 1;
		background-color: rgba(255, 255, 255, 0.25);
		backdrop-filter: blur(6px);
		border: 1px solid rgba(236, 238, 238, 0.2);
		padding: 15px;
		border-radius: 25px;
		text-align: center;
		color: white;
	}
    h1 {
        font-size: 1.5rem;
        background-image: linear-gradient(to right, #7456eb, #ec3636);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
    p {
        font-size: 1.15rem;
        background-image: linear-gradient(to right, #7456eb, #ec3636);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        margin-bottom: 20px;
    }
	.button-container {
		margin-top: 20px;
        display: flex;
        flex-direction: row;
        justify-content: center;
	}
	.button {
		position: relative;
		display: block;
		width: auto;
		padding: 10px 20px;
		margin: 0 10px;
		background-color: rgba(255, 255, 255, 0.25); /* Semi-transparent background */
		backdrop-filter: blur(6px);
		text-decoration: none;
		border-radius: 15px;
		transition: background-color 0.3s, transform 0.3s;
		z-index: 1;
        border: none; /* Remove previous border styles */
		transform: scale(1);
	}
	.button::before {
		content: '';
		position: absolute;
		top: -1px;
		left: -1px;
		right: -1px;
		bottom: -1px;
		background: linear-gradient(to right, #7456eb, #ec3636);
		border-radius: 16px; /* Slightly larger than button */
		z-index: -1;
	}
    .gradient-text {
        background-image: linear-gradient(to right, #ffffff, #ffffff);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
	.button:hover {
		background-color: rgba(255, 255, 255, 0.4);
		transform: scale(1.1);
	}
</style>
