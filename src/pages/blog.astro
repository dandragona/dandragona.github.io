---
import Layout from '../layouts/Layout.astro';
const posts = await Astro.glob('./blog/*.{md,mdx}');
---

<Layout title="Blog">
	<h1 style="visibility: hidden; user-select: none;">Blog</h1>
	<div class="post-list">
		{posts.map(post => (
			<a href={post.url} class="post-card">
				<h2>{post.frontmatter.title}</h2>
				<p>{post.frontmatter.description}</p>
			</a>
		))}
	</div>
</Layout>

<style>
	h1 {
		font-size: 2.5rem;
		margin-bottom: 40px;
        background-image: linear-gradient(to right, #7456eb, #ec3636);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
	}
	.post-list {
		display: grid;
		gap: 20px;
	}
	.post-card {
		position: relative;
		display: block;
		padding: 15px;
		background-color: rgba(255, 255, 255, 0.1);
		border-radius: 15px;
		text-decoration: none;
		color: white;
		transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
		z-index: 1;
	}
	.post-card::before {
		content: '';
		position: absolute;
		top: -1px;
		left: -1px;
		right: -1px;
		bottom: -1px;
		background: linear-gradient(to right, #7456eb, #ec3636);
		border-radius: 16px;
		z-index: -1;
	}
	.post-card:hover {
		background-color: rgba(255, 255, 255, 0.2);
		transform: scale(1.03) translateY(-5px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
	}
	.post-card h2 {
		font-size: 1.5rem;
		margin-bottom: 10px;
		/* background-image: linear-gradient(to right, #7456eb, #ec3636);
        -webkit-background-clip: text;
        background-clip: text; */
        /* color: transparent; */
	}
</style>
