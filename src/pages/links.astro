---
import Layout from '../layouts/Layout.astro';
const pdfs = [
    { href: '/pdfs/weyl_quant.pdf', name: 'Weyl Quantization' },
    { href: '/pdfs/qmcmh.pdf', name: 'Quantum Markov Chains & Metropolis-Hastings Algorithm' },
	{ href: '/pdfs/berry.pdf', name: 'Berry Phase & Chern Numbers' },
	{ href: '/pdfs/danielmandragona.pdf', name: 'Daniel Mandragona - Resume' }
];
---

<Layout title="Links">
	<h1>Links</h1>
	<div class="link-list">
		<a href="https://github.com/dandragona" class="link-card">
			<h2>GitHub</h2>
		</a>
		<a href="https://www.linkedin.com/in/daniel-mandragona-a740301a5/" class="link-card">
			<h2>LinkedIn</h2>
		</a>
	</div>
	<h2>PDFs</h2>
	<div class="link-list">
		{pdfs.map(pdf => (
            <a href={pdf.href} class="link-card" target="_blank" rel="noopener noreferrer">
                <h2>{pdf.name}</h2>
            </a>
        ))}
	</div>
</Layout>

<style>
	h1 {
		font-size: 2.5rem;
		margin-bottom: 40px;
        background-image: linear-gradient(to left, #7456eb, #ec3636, );
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
	}
	h2 {
		font-size: 2rem;
		margin-top: 40px;
		margin-bottom: 20px;
		background-image: linear-gradient(to left, #7456eb, #ec3636);
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
	}
	.link-list {
		display: grid;
		gap: 15px;
	}
	.link-card {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 15px;
		background-color: rgba(255, 255, 255, 0.1);
		border-radius: 15px;
		text-decoration: none;
		color: white;
		transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
		z-index: 1;
	}
	.link-card::before {
		content: '';
		position: absolute;
		top: -1px;
		left: -1px;
		right: -1px;
		bottom: -1px;
		background: linear-gradient(to left, #7456eb, #ec3636);
		border-radius: 16px;
		z-index: -1;
	}
	.link-card:hover {
		background-color: rgba(255, 255, 255, 0.2);
		transform: scale(1.03) translateY(-5px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
	}
	.link-card h2 {
		font-size: 1.2rem;
		margin: 0;
		text-align: center;
		background-image: linear-gradient(to left, #ffffff, #ffffff);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
	}
</style>