---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString('en-us', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
});
---
<Layout title={frontmatter.title}>
    <h1>{frontmatter.title}</h1>
    <p class="pub-date">{formattedDate}</p>
    <div class="post-content">
        <slot />
    </div>
</Layout>

<style>
  h1 {
    font-size: 2.5rem;
    margin-bottom: 40px;
    margin-top: 80px;
        background-image: linear-gradient(to right, #7456eb, #ec3636);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        text-align: center;
  }
  .pub-date {
    color: #000000 !important; /* Brighter, more visible purple */
    text-align: center;
    font-style: italic;
    margin-bottom: 2rem; /* Add some space below the date */
  }
  .post-content {
    color: #333;
    font-size: 1.1rem;
    line-height: 1.7;
  }
</style>
